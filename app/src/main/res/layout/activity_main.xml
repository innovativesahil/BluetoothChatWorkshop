<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100"
    tools:context="com.skydiver.bluetoothchatworkshop.MainActivity">


    <TextView
        android:id="@+id/text_paired_devices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="5dp"
        android:background="#96dddddd"
        android:gravity="center"
        android:text="Paired Bluetooth Devices"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold" />



    <ListView
        android:id="@+id/list_paired_devices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:paddingLeft="5dp" />


    <Button
        android:id="@+id/button_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Turn Bluetooth On" />

</LinearLayout>
